{% extends 'base.html.twig' %}

{% block body %}
<div id="wrapper">
    <h1 class="text-center">Categories list</h1>
    <div class="container">
        <div class="row">
            {% for category in categories %}
                <div class="col-md-3">
                    {{ category.id }}
                </div>
                <div class="col-md-3">
                    {{ category.name }}
                </div>
                <div class="col-md-3">
                {{ category.catalog.name }}
                </div>
                <div class="col-md-3">
                        <ul>
                            <li>
                                <a href="{{ path('product_show', { 'id': category.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('product_edit', { 'id': category.id }) }}">edit</a>
                            </li>
                        </ul>
                </div>

            {% endfor %}
        </div>
    </div>
    <ul>
        <li>
            <a href="{{ path('category_new') }}">Create a new category</a>
        </li>
    </ul>
</div>
{% endblock %}
