{% extends 'base.html.twig' %}

{% block body %}
<div id="wrapper">
    <h3 class="text-center">Products list</h3>
    <div class="container">
        <div class="row">
        {% for product in products %}
            <div class="col-md-1">
                {{ product.id }}
            </div>
            <div class="col-md-2">
                {{ product.name }}
            </div>
            <div class="col-md-3">
                {% if product.createdAt %}{{ product.createdAt|date('Y-m-d H:i:s') }}{% endif %}
            </div>
            <div class="col-md-2">
                {% if product.updatedAt %}{{ product.updatedAt|date('Y-m-d H:i:s') }}{% endif %}
            </div>
            <div class="col-md-2">
                {{ product.sKU }}
            </div>
            <div class="col-md-2">
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('product_show', { 'id': product.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('product_edit', { 'id': product.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </div>

        {% endfor %}
        </div>
    </div>
    <ul>
        <li>
            <a href="{{ path('product_new') }}">Create a new product</a>
        </li>
    </ul>
</div>
{% endblock %}
